{
  "name": "regex-copilot",
  "displayName": "Regex Copilot",
  "description": "Regex playground with AI-powered suggestions and multi-select editing",
  "version": "0.0.1",
  "publisher": "SaanchitaV",
  "engines": {
    "vscode": "^1.102.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SaanchitaV/RegexMatcher.git"
  },
  "homepage": "https://github.com/SaanchitaV/RegexMatcher#readme",
  "bugs": {
    "url":"https://github.com/SaanchitaV/RegexMatcher/issues"
  },
  "activationEvents": [
    "*"
  ],
  "browser": "./out/extension.js",
  "main": "./out/extension.js",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "contributes": {
    "commands": [
      {
        "command": "regex-copilot.open",
        "title": "Regex Copilot: Open"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "regex-copilot-container",
          "title": "Regex Copilot",
          "icon": "media/regex-icon.svg"
        }
      ]
    },
    "views": {
      "regex-copilot-container": [
        {
          "id": "regex-copilot-view",
          "name": "Playground",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "package": "vsce package",
    "publish": "vsce publish",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "typescript": "^5.9.2",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@types/node": "^24.1.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  }
}
